<Window x:Class="ClearShader_SC.ConfirmDeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmar Eliminación" Height="200" Width="208"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner">
    <Border CornerRadius="20" BorderBrush="#FFC91D1D" BorderThickness="2" Background="#FF1A1A1A">
        <Grid VerticalAlignment="Center" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="¿Estás seguro de que deseas eliminar la carpeta de shaders?" Foreground="#FFC91D1D" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="10">
                <Button Content="Sí" Width="32" Margin="10" Click="YesButton_Click" Background="#FFC91D1D" Foreground="#FF1A1A1A" Height="21">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="No" Width="32" Margin="10" Click="NoButton_Click" Background="#FFC91D1D" Foreground="#FF1A1A1A" Height="21">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

